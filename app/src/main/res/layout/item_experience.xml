<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin_small"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/card_rich_media" />

        <include layout="@layout/card_primary_title_start" />

        <include layout="@layout/card_date_range" />

        <include layout="@layout/card_chips_container" />

        <include layout="@layout/divider" />

        <include layout="@layout/card_action_icon_2" />

    </LinearLayout>

</android.support.v7.widget.CardView>