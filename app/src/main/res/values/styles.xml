<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Resume" parent="Theme.Base"/>

    <style name="Resume" parent="Theme.Resume" />

    <style name="Resume.DrawerBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Resume.DrawerPicture">
        <item name="android:layout_width">@dimen/drawer_header_picture</item>
        <item name="android:layout_height">@dimen/drawer_header_picture</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">@dimen/drawer_header_picture_margin</item>
        <item name="android:layout_marginLeft">@dimen/drawer_margin_start</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Resume.DrawerSubtitle" parent="Theme.Resume">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Resume.DrawerSubtitle.Fullname">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Resume.DrawerSubtitle.Email">
        <item name="android:textColor">#DEFFFFFF</item>
    </style>
</resources>
